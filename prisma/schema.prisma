generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique

  // üîê AUTH (LOGIN / SIGNUP)
  password      String

  // üéØ CREDITS SYSTEM
  // ‚úÖ FREE USER = 10 (SINGLE SOURCE OF TRUTH)
  credits       Int      @default(10)

  // üí≥ PLAN SYSTEM
  // ‚úÖ DEFAULT FREE (IMPORTANT FOR NEXTAUTH + JWT)
  plan          String   @default("free")   // free / prelaunch / essential / pro / enterprise
  billing       String?                     // monthly / yearly
  planExpiresAt DateTime?                   // auto expiry via verify API

  createdAt     DateTime @default(now())

  // üîó RELATION
  payments      Payment[]
}

model Payment {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @db.ObjectId

  plan              String
  billing           String
  amount            Float
  currency          String

  razorpayPaymentId String   @unique
  razorpayOrderId   String
  status            String

  createdAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
