generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  credits   Int      @default(10)
  createdAt DateTime @default(now())
}

model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  amount    Int
  plan      String
  createdAt DateTime @default(now())
}
