{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "baseUrl": ".",  
    "paths": {
      "@/*": ["./*"],
      "@models/*": ["./app/models/*"],
      "@/models/*": ["./app/models/*"],
      "@lib/*": ["./app/lib/*"],
      "@/lib/*": ["./app/lib/*"],
      "@auth/*": ["./app/api/auth/*"],
      "@/auth/*": ["./app/api/auth/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
